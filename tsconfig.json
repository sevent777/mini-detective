{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./js/",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es7"
    ],
    "module": "commonjs",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "allowJs": true,
  },
  "include": [
    "src/*",
    "types/*"
  ]
}